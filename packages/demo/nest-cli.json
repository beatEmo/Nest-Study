{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/*.md",
      {
        "include": "src/assets/1.md",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true
  }
}
